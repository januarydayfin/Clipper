<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_marginHorizontal="@dimen/base_screen_margin"
	android:layout_marginTop="@dimen/base_top_margin"
	android:orientation="vertical">

	<FrameLayout
		style="@style/BaseActionContainer"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<com.google.android.material.materialswitch.MaterialSwitch
			android:id="@+id/dynamic_colors_switch"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="16dp"
			android:text="Use Dynamic Colors" />
	</FrameLayout>

	<LinearLayout
		android:id="@+id/appTheme"
		android:layout_marginTop="12dp"
		android:orientation="horizontal"
		style="@style/BaseActionContainer"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>

	</LinearLayout>


</LinearLayout>