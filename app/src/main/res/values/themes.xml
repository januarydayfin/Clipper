<resources xmlns:tools="http://schemas.android.com/tools">
	<!-- Base application theme. -->
	<style name="Theme.BufferCompanion" parent="Theme.Material3.Light.NoActionBar">
		<!-- Primary brand color. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
		<item name="android:statusBarColor">@color/colorActivity</item>
		<item name="android:navigationBarColor">@color/colorActivity</item>
		<item name="android:windowLightNavigationBar">true</item>
		<item name="android:windowLightStatusBar">true</item>
		<item name="colorOnPrimary">@color/black</item>
		<!-- Secondary brand color. -->
		<item name="colorSecondary">@color/azure_primary</item>
		<item name="colorSecondaryVariant">@color/azure_primary</item>
		<item name="colorOnSecondary">@color/black</item>
		<!-- Status bar color. -->
		<!-- Customize your theme here. -->
	</style>

	<style name="ThemeOverlay.App.Button" parent="ThemeOverlay.Material3.Button">
		<!-- Background button color -->
		<item name="colorPrimary">@color/colorAccent</item>
		<item name="colorOnPrimary">@color/white</item>
	</style>

	<style name="ButtonTextStyle" parent="android:Widget.TextView">
		<item name="android:fontFamily">@font/manrope_medium</item>
		<item name="android:lineSpacingExtra">0sp</item>
		<item name="android:textSize">12sp</item>
		<item name="android:textColor">@color/black</item>
	</style>

	<style name="SubmitButtonStyle" parent="Widget.Material3.Button">
		<item name="android:textAppearance">@style/ButtonTextStyle</item>
		<item name="materialThemeOverlay">@style/ThemeOverlay.App.Button</item>
		<item name="backgroundTint">@color/submit_button_selector</item>
		<item name="textAllCaps">false</item>
		<item name="android:textColor">@color/submit_button_text</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">match_parent</item>
	</style>

	<style name="EditTextStyle" parent="android:Widget.TextView">
		<item name="android:background">@drawable/edit_text_background</item>
		<item name="android:inputType">textCapSentences</item>
		<item name="android:padding">9dp</item>
		<item name="android:textColor">@color/edit_text_colors</item>
		<item name="android:textColorHint">@color/edit_text_colors_hint</item>
	</style>
</resources>